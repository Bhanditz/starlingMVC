#!/bin/sh

# Usage: 
#   Define an IVY environment variable, e.g.
#   ~/.bash_profile
#   export IVY=/usr/share/java/ivy.jar 
#
#   and NEXUS configuration variables, e.g.
#   source ~/.ivy2/.nexus-config

NEXUS_HOST=$NEXUS_HOST:$NEXUS_PORT

cat << EOF
  Nexus configuration: 
    $NEXUS_USER@$NEXUS_HOST

EOF
 
LIB=lib
SETTINGS="-settings .ivysettings/ivysettings.xml"
DEPENDS="-ivy ivy.xml"
TARGET="-retrieve $LIB/[artifact]-[revision].[ext]"

java -jar $IVY $SETTINGS $DEPENDS -overwrite ${TARGET} -symlink
